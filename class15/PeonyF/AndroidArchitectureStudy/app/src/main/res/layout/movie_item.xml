<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.architecture.androidarchitecturestudy.data.model.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movie_item"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            imageUrl="@{movie.image}"
            android:src="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_movie_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@{movie.title}"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_item"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rb_movie_item_rating"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:stepSize="0.5"
            bindRatingStar="@{movie.userRating}"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_item_title" />

        <TextView
            android:id="@+id/tv_movie_item_pub_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{movie.pubDate}"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_item"
            app:layout_constraintTop_toBottomOf="@+id/rb_movie_item_rating" />

        <TextView
            android:id="@+id/tv_movie_item_director"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{movie.director}"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_item_pub_date" />

        <TextView
            android:id="@+id/tv_rv_movie_item_actors"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{movie.actor}"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@+id/iv_movie_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_item_director" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>